<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/module_head"
        android:layout_width="146dp"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="65dp"
        android:fontFamily="@font/dm_sans"
        android:gravity="top"
        android:lineHeight="40dp"
        android:text="@string/welcome"
        android:textAppearance="@style/module_head"
        android:textColor="#1C4977"
        android:textSize="32dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="214.81dp"
            android:layout_height="33.92dp"
            android:layout_weight="1"
            android:background="@drawable/search_bg"
            android:drawableLeft="@drawable/searchicon1"
            android:drawablePadding="8dp"
            android:ems="10"
            android:fontFamily="@font/dm_sans"
            android:hint="Search"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:textSize="17dp"
            tools:ignore="TouchTargetSizeCheck" />

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/chooseDayAutoCompleteTextView"
            android:layout_width="113.06dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:background="@drawable/spinner_bg"
            app:icon="@drawable/calendar_icon"
            android:drawablePadding="8dp"
            android:fontFamily="@font/dm_sans"
            android:hint="Choose a Day"
            android:inputType="none"
            android:textAlignment="center"
            android:textColorHint="@color/white"
            android:textSize="10.92dp"
            tools:ignore="TouchTargetSizeCheck" />


    </LinearLayout>






</LinearLayout>